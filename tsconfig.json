{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src/",
        "incremental": true,
        "esModuleInterop": true,
        "inlineSources": true
    },
    "exclude": ["node_modules", "dist", "coverage", "documentation"]
}
